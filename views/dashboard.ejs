		  crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


			<script type="text/javascript">
			$(function() {

				// Desktop side

				$("#rent").click(() => {
					$.ajax({
						type:'POST',
						data: null,
						// contentType: 'application/json',
						url: 'http://localhost:3000/rent',
						success: (data) => {
							console.log('ajax rent success. Reservation Id: ' + data);

							$('#pw-form-group').show();
							$('#rent').hide();
						},
						error: () => {
							console.log("ajax rent err");
						}
					});
				});

				$("#generateKey").click(() => {
					var data = {};
					data.password = $('input#password').val();

					$.ajax({
						type:'POST',
						data: data,
						// contentType: 'application/json',
						url: 'http://localhost:3000/generateKey',
						success: (symKeyId) => {
							// console.log('Reservation Id: ' + data);
							console.log("ajax generate key success: " + symKeyId)

							const keyDiv = "<div>Your Sym Key Id: <span id='symKeyId' class='txt-blue'>" + symKeyId + "</span></div>";

							$('#open').before(keyDiv);
						
							$('#pw-form-group').hide();
							$('#open').show();

						},
						error: () => {
							console.log("ajax generate key err");
						}
					});
				});

				$("#open").click(() => {
					var data = {};
					data.symKeyId = $('#symKeyId').text();

					$.ajax({
						type:'POST',
						data: data,
						// contentType: 'application/json',
						url: 'http://localhost:3000/open',
						success: (data) => {
							// console.log('Reservation Id: ' + data);
							console.log("ajax whisper post success: " + data)

							// $('#open').show();
							// $('#rent').hide();
						},
						error: () => {
							console.log("ajax whisper post err");
						}
					});
				});

			});

	
			// Doorlock side

			$("#dl-generateKey").click(() => {
				var data = {};
				data.password = $('input#dl-password').val();

				$.ajax({
					type:'POST',
					data: data,
					// contentType: 'application/json',
					url: 'http://localhost:3000/generateKey',
					success: (symKeyId) => {
						// console.log('Reservation Id: ' + data);
						console.log("ajax generate key success: " + symKeyId)

						const keyDiv = "<div>Your Sym Key Id: <span id='dl-symKeyId' class='txt-blue'>" + symKeyId + "</span></div>";

						$('#dl-subscribe').before(keyDiv);
					
						$('#dl-pw-form-group').hide();
						$('#dl-subscribe').show();

					},
					error: () => {
						console.log("ajax generate key err");
					}
				});
			});

			$("#dl-subscribe").click(() => {
				var data = {};
				data.symKeyId = $('#dl-symKeyId').text();

				$.ajax({
					type:'POST',
					data: data,
					// contentType: 'application/json',
					url: 'http://localhost:3000/subscribe',
					success: (data) => {
						// console.log('Reservation Id: ' + data);
						console.log("ajax subscribe success: " + data)
						
					},
					error: () => {
						console.log("ajax subscribe err");
					}
				});
			});



			</script>


